<section class="our-courses" id="courses">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-heading">
            <h2>Our Popular Courses</h2>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="owl-courses-item owl-carousel">
{% for row in rows %}

         <div class="item">
              <img src="themes/custom/azure/images/course-01.jpg" alt="Course One">
              <div class="down-content">
                <h4> {{ row['content']['#row']._entity.body.value | raw }}   </h4>

                <div class="info">
                  <div class="row">
                    <div class="col-8">
                      <ul>
                        {% for i in  1..row['content']['#row']._entity.field_rating.value %}
                                                <li><i class="fa fa-star"></i></li>

                        {% endfor %}

                      </ul>
                    </div>
                    <div class="col-4">
                       <span>${{ row['content']['#row']._entity.field_course_price.value }} </span>
                    </div>
                  </div>
                </div>
              </div>
        </div>
            
{% endfor %}
        </div>
    </div>
    </div>
    </div>
  </section>
